<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FirstApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FirstApp" parent="Base.Theme.FirstApp" />
    <style name="text_view_headline_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/dark_50</item>
        <item name="android:textSize">@dimen/text_size_37</item>
    </style>
   <style name="edit_text_style">
       <item name="android:layout_width">@dimen/zero</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_marginTop">@dimen/space_7dp</item>
       <item name="android:background">@drawable/edit_text_background</item>
       <item name="android:padding">@dimen/space_16dp</item>
       <item name="android:textColorHint">@color/Light_20</item>
       <item name="android:textSize">@dimen/text_size_16</item>
   </style>
    <style name="text_view_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_17dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_input_style">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_7dp</item>
        <item name="android:elevation">@dimen/zero</item>
        <item name="android:textColorHint">@color/Light_20</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
    <style name="edit_text_input_style">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">@dimen/space_16dp</item>
        <item name="android:textColorHint">@color/Light_20</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:hint">@string/password</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="button_style">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_47dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/space_44dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/Light_100</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="text_question_account_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/Light_20</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="text_click_account_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Dodger_Blue_color</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>




</resources>